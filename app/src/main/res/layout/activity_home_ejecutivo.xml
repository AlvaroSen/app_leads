<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_ejecutivo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bienvenida -->
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="178dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:text="Bienvenido Usuario"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Rol -->
    <TextView
        android:id="@+id/tv_role"
        android:layout_width="96dp"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:text="Rol: Ejecutivo"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome" />

    <!-- Bot贸n Ver Leads -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ver_leads"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_ver_leads"
        app:backgroundTint="@color/button_orange"
        android:textColor="@color/on_button_orange"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_role"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Bot贸n Historial Atenciones -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_historial_atenciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Historial Atenciones"
        app:backgroundTint="@color/button_blue"
        android:textColor="@color/on_button_blue"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_ver_leads"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Bot贸n Cerrar Sesi贸n -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_cerrar_sesion"
        app:backgroundTint="@color/button_red"
        android:textColor="@color/on_button_red"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_historial_atenciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
